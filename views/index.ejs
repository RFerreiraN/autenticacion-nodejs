<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sistema de Autenticaci贸n</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #eef2f3;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card {
      background: #fff;
      width: 100%;
      max-width: 400px;
      padding: 2.5rem;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Estilos del Dashboard */
    .dashboard {
      text-align: center;
    }

    .user-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .welcome-title {
      color: #333;
      margin-bottom: 0.5rem;
    }

    .user-name {
      color: #4facfe;
      font-weight: bold;
    }

    /* Estilos de Tabs */
    .header {
      display: flex;
      justify-content: space-around;
      margin-bottom: 2rem;
      border-bottom: 2px solid #f0f0f0;
    }

    .tab {
      padding: 10px;
      cursor: pointer;
      font-weight: bold;
      color: #aaa;
      transition: 0.3s;
    }

    .tab.active {
      color: #4facfe;
      border-bottom: 2px solid #4facfe;
    }

    /* Estilos de Formulario */
    form {
      display: none;
    }

    form.active {
      display: block;
    }

    .input-group {
      margin-bottom: 1.2rem;
      text-align: left;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #555;
      font-size: 0.9rem;
    }

    input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      outline: none;
      transition: 0.3s;
    }

    input:focus {
      border-color: #4facfe;
      box-shadow: 0 0 5px rgba(79, 172, 254, 0.3);
    }

    button {
      width: 100%;
      padding: 12px;
      background: #4facfe;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
      margin-top: 10px;
    }

    button:hover {
      background: #00f2fe;
      transform: translateY(-1px);
    }

    .logout-btn {
      background: #ff4757;
      margin-top: 2rem;
    }

    .logout-btn:hover {
      background: #ff6b81;
    }
  </style>
</head>

<body>

  <div class="card">
    <% if (locals.user) { %>
      <div class="dashboard">
        <div class="user-icon"></div>
        <h1 class="welcome-title">隆Hola, <span class="user-name">
            <%= user.username %>
          </span>!</h1>
        <p>Tu sesi贸n est谩 activa y el token es v谩lido.</p>

        <form id="logout-form" style="display: block;">
          <button type="submit" class="logout-btn">Cerrar Sesi贸n</button>
        </form>
      </div>
      <% } else { %>
        <div class="header">
          <div id="login-tab" class="tab active" onclick="switchTab('login')">LOGIN</div>
          <div id="register-tab" class="tab" onclick="switchTab('register')">REGISTRO</div>
        </div>

        <form id="login-form" class="active">
          <div class="input-group">
            <label>Nombre de Usuario</label>
            <input type="text" name="username" required autocomplete="username">
          </div>
          <div class="input-group">
            <label>Contrase帽a</label>
            <input type="password" name="password" required autocomplete="current-password">
          </div>
          <button type="submit">Entrar al Sistema</button>
        </form>

        <form id="register-form">
          <div class="input-group">
            <label>Elige un Usuario</label>
            <input type="text" name="username" required autocomplete="username">
          </div>
          <div class="input-group">
            <label>Crea una Contrase帽a</label>
            <input type="password" name="password" required autocomplete="new-password">
          </div>
          <button type="submit" style="background: #27ae60;">Crear Cuenta Gratis</button>
        </form>
        <% } %>
  </div>

  <script>
    // --- L贸gica para cambiar entre pesta帽as ---
    function switchTab(type) {
      const lForm = document.getElementById('login-form');
      const rForm = document.getElementById('register-form');
      const lTab = document.getElementById('login-tab');
      const rTab = document.getElementById('register-tab');

      if (type === 'login') {
        lForm.classList.add('active');
        rForm.classList.remove('active');
        lTab.classList.add('active');
        rTab.classList.remove('active');
      } else {
        rForm.classList.add('active');
        lForm.classList.remove('active');
        rTab.classList.add('active');
        lTab.classList.add('active'); // Correcci贸n visual
        lTab.classList.remove('active');
        rTab.classList.add('active');
      }
    }

    // --- Manejo de LOGIN ---
    const loginForm = document.getElementById('login-form');
    if (loginForm) {
      loginForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));

        try {
          const response = await fetch('/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          if (response.ok) {
            e.target.reset(); // Limpia inputs
            window.location.href = '/protected'; // Recarga para entrar al Dashboard
          } else {
            const err = await response.json();
            alert('Error: ' + (err.message || 'Credenciales incorrectas'));
          }
        } catch (error) {
          alert('Error de conexi贸n');
        }
      });
    }

    // --- Manejo de REGISTRO ---
    const registerForm = document.getElementById('register-form');
    if (registerForm) {
      registerForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = Object.fromEntries(new FormData(e.target));

        try {
          const response = await fetch('/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          if (response.ok) {
            alert('隆Usuario creado! Ahora inicia sesi贸n.');
            e.target.reset(); // Limpia inputs
            switchTab('login'); // Te mueve al login autom谩ticamente
          } else {
            const err = await response.json();
            alert('Error: ' + (err.message || 'No se pudo registrar'));
          }
        } catch (error) {
          alert('Error de conexi贸n');
        }
      });
    }

    // --- Manejo de LOGOUT ---
    const logoutForm = document.getElementById('logout-form');
    if (logoutForm) {
      logoutForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        try {
          const response = await fetch('/logout', { method: 'POST' });
          if (response.ok) {
            window.location.href = '/'; // Recarga para volver al Login
          }
        } catch (error) {
          alert('Error al cerrar sesi贸n');
        }
      });
    }
  </script>

</body>

</html>